                                    </ul>
                                </div>
                                <h4>Materiais</h4>
                                <div ng-init='materiais = <?php echo json_encode($materiais); ?>'>
                                    <ul ng-repeat="material in materiais | filter:filtroUnidade">
                                        <li>{{material.nome}}</li>
                                    </ul>
                                </div>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
